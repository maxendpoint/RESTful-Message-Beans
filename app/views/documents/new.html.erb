<h1>New document</h1>

<% form_for(:document, 
            :url => {:action => 'create'}, 
            :html => { :multipart => true }) do |form| %>

    Comment:              <%= form.text_field("comment") %><br/>
    Upload your document: <%= form.file_field("uploaded_document") %><br/>

    <%= submit_tag("Upload document") %>
<% end %>

<%= link_to 'Back', documents_path %>
