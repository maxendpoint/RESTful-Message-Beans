<fieldset>
    <legend>
    Message broker subscriber properties
    </legend>
    <table>
      <tr>
        <td>  Url</td>
        <td><%=  @listener.subscriber_url %></td>
      </tr>
      <tr>
        <td> Host</td>
        <td><%=  @listener.subscriber_host %></td>
      </tr>
      <tr>
        <td> Port</td>
        <td><%=  @listener.subscriber_port %></td>
      </tr>
      <tr>
        <td> User</td>
        <td><%=  @listener.subscriber_user %></td>
      </tr>
      <tr>
        <td> Password</td>
        <td><%= @listener.subscriber_password %></td>
      </tr>
    </table>
  </fieldset>
  
  <br />
  
  <fieldset>
    <legend>
    RESTful submitter properties
    </legend>
    <table>
      <tr>
        <td>Login url</td>
        <td><%= @listener.submitter_login_url %></td>
      </tr>
      <tr>
        <td>Delivery url</td>
        <td><%=  @listener.submitter_delivery_url %></td>
      </tr>
      <tr>
        <td>Submitter user</td>
        <td><%=  @listener.submitter_user %></td>
      </tr>
      <tr>
        <td>Submitter password</td>
        <td><%=  @listener.submitter_password %></td>
      </tr>
    </table>
  </fieldset>  
  
  <br />
  
  <fieldset>
    <legend>
      Operational status
    </legend>
    <table>
      <tr>
        <td>Status</td>
        <td><%= @listener.running? ? 'Active' : 'Idle' %></td>
      </tr>
      <tr>
        <td>Pid</td>
        <td><%= @listener.pid %></td>
    </table>
  </fieldset>
<br />

<%= link_to 'Edit', edit_listener_path(@listener) %> |
<%= link_to 'Back', listeners_path %>
