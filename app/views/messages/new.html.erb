<%= error_messages_for("message") %>

<% form_for(:message, 
            :url => {:action => 'save'}, 
            :html => { :multipart => true }) do |form| %>

    Comment:             <%= form.text_field("comment") %><br/>
    Upload your message: <%= form.file_field("uploaded_message") %><br/>

    <%= submit_tag("Upload file") %>
<% end %>
