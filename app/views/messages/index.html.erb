<h1>Listing Messages</h1>

<table>
  <tr>
    <th>Comment</th>
    <th>Name</th>
    <th>Content-type url</th>
    <th>data</th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%=h message.comment %></td>
    <td><%=h message.name %></td>
    <td><%=h message.content_type %></td>
    <td><%=h message.data %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

